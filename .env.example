# Database
DATABASE_URL=postgresql://user:password@localhost:5432/fastconsig

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Clerk Authentication
CLERK_SECRET_KEY=your_clerk_secret_key
CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key

# Storage Configuration
# Options: 'local' or 'oci'
STORAGE_PROVIDER=local

# Local Storage Configuration (for development)
LOCAL_STORAGE_PATH=./storage

# Oracle Cloud Storage Configuration (for production)
OCI_TENANCY_ID=ocid1.tenancy.oc1..your_tenancy_id
OCI_USER_ID=ocid1.user.oc1..your_user_id
OCI_FINGERPRINT=aa:bb:cc:dd:ee:ff:00:11:22:33:44:55:66:77:88:99
OCI_PRIVATE_KEY_PATH=/path/to/oci_api_key.pem
OCI_REGION=us-ashburn-1
OCI_NAMESPACE=your_namespace
OCI_BUCKET_NAME=fastconsig-uploads
OCI_COMPARTMENT_ID=ocid1.compartment.oc1..your_compartment_id
