{
  "name": "fastconsig",
  "version": "0.1.0",
  "private": true,
  "description": "Sistema de Gestao de Consignados",
  "keywords": ["consignado", "folha", "emprestimo", "averbacao"],
  "license": "UNLICENSED",
  "author": "FastConsig Team",
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "start": "turbo start",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "test:coverage": "turbo test:coverage",
    "test:e2e": "turbo test:e2e",
    "db:generate": "pnpm --filter @fastconsig/database generate",
    "db:push": "pnpm --filter @fastconsig/database push",
    "db:migrate": "pnpm --filter @fastconsig/database migrate",
    "db:studio": "pnpm --filter @fastconsig/database studio",
    "db:seed": "pnpm --filter @fastconsig/database seed",
    "clean": "turbo clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.3.0",
    "turbo": "^2.0.0",
    "typescript": "^5.5.0"
  },
  "packageManager": "pnpm@9.4.0",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
